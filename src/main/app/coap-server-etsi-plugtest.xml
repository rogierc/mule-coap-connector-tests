        <set-variable variableName="actual_payload" value="#[nl.teslanet.mule.transport.coap.test.ETagMemoryStore.getPayload('obs_etag')]" doc:name="get actual payload"/>
        <set-variable variableName="actual_ct" value="#[nl.teslanet.mule.transport.coap.test.ETagMemoryStore.getContentType('obs_etag')]" doc:name="get actual content type"/>
        
		<choice doc:name="Choice request code">
			<when expression="#[ flowVars.method == 'GET']">
                <set-payload value="#[ flowVars.actual_payload ]" doc:name="set content" encoding="UTF-8" mimeType="text/plain"/>
			    <set-property propertyName="coap.opt.content_format" value="#[ flowVars.actual_ct ]" doc:name="set content format"/>       				
			    <set-property propertyName="coap.opt.max_age" value="5" doc:name="set max_age"/>       				
			    <set-property propertyName="coap.response.code" value="CONTENT" doc:name="CONTENT"/>       				
			</when>			
			<when expression="#[ flowVars.method == 'PUT']">
			    
			    <set-variable variableName="new_payload" value="#[nl.teslanet.mule.transport.coap.test.ETagMemoryStore.setPayload('obs_etag', payload )]" doc:name="get actual payload"/>
			    <set-variable variableName="new_ct" value="#[nl.teslanet.mule.transport.coap.test.ETagMemoryStore.setContentType('obs_etag', message.inboundProperties['coap.opt.content_format'])]" doc:name="get actual content type"/>

