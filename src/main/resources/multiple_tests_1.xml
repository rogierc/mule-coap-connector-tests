<tests>
    <test name="test con PUT default">
        <request>
            <method>PUT</method>
            <confirmable>true</confirmable>
            <path>/test</path>
            <set>
                <outboundProperty>
                    <name>coap.opt.content_format</name>
                    <value>41</value>
                </outboundProperty>
            </set>
            <assert>
                <inboundProperty>
                    <name>coap.request.code</name>
                    <value>PUT</value>
                </inboundProperty>
                <inboundProperty>
                    <name>coap.request.confirmable</name>
                    <value>true</value>
                </inboundProperty>
                <inboundProperty>
                    <name>coap.opt.content_format</name>
                    <value>41</value>
                </inboundProperty>
            </assert>
        </request>

        <response>
            <set>
                <payload>
                    <value>GetResponse1</value>
                    <mimeType>text/plain</mimeType>
                </payload>
                <outboundProperty>
                    <name>coap.response.code</name>
                    <value>CONTENT</value>
                </outboundProperty>
                <outboundProperty>
                    <name>coap.opt.content_format</name>
                    <value>0</value>
                </outboundProperty>
            </set>
            <assert>
                <inboundProperty>
                    <name>coap.response.code</name>
                    <value>2.01</value>
                </inboundProperty>
                <inboundProperty>
                    <name>coap.response.success</name>
                    <value>true</value>
                </inboundProperty>
                <inboundProperty>
                    <name>coap.opt.content_format</name>
                    <value>0</value>
                </inboundProperty>
                <payload>
                    <value>GetResponse1</value>
                    <mimeType>text/plain</mimeType>
                </payload>
            </assert>
        </response>
