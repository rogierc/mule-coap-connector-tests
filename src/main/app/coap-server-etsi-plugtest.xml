                <set-payload value="#[ NullPayload.getInstance() ]" doc:name="set content" encoding="UTF-8" mimeType="text/plain"/>
                <set-property propertyName="coap.response.code" value="CHANGED" doc:name="CHANGED"/>
	
			</when>			
			<when expression="#[ flowVars.method == 'DELETE']">
                <coap-server:remove-resource config-ref="CoAP_ETSI_Plugtest_Server" uri="/obs" doc:name="remove /obs"/>
                <coap-server:add-resource config-ref="CoAP_ETSI_Plugtest_Server" ct="0" title="Observe resource" uri="/obs" delete="true" get="true" put="true" observable="true" doc:name="CoAP Server"/>
                <set-payload value="#[ flowVars.actual_payload ]" doc:name="set content" encoding="UTF-8" mimeType="text/plain"/>
                <set-property propertyName="coap.response.code" value="DELETED" doc:name="DELETED"/>
	
			</when>	
			<otherwise>
                <set-payload value="Unexpected request" encoding="UTF-8" mimeType="text/plain" doc:name="Unexpected method"/>
                <set-property propertyName="coap.response.code" value="NOT_IMPLEMENTED" doc:name="NOT_IMPLEMENTED"/>       				
			</otherwise>
		</choice>
        <logger level="INFO" doc:name="Logger"/>
    </flow>
    
