<test>
    <request>
        <assert>
            <inboundProperty>
                <name>coap.request.code</name>
                <value>GET</value>
            </inboundProperty>
            <inboundProperty>
                <name>coap.request.confirmable</name>
                <value>false</value>
            </inboundProperty>
        </assert>
    </request>
 
    <response>
        <set>
            <payload>
                <value>ServerResponse2</value>
                <mimeType>text/plain</mimeType>
            </payload>
            <outboundProperty>
                <name>coap.response.code</name>
                <value>CONTENT</value>
            </outboundProperty>
        </set>
        <assert>
            <inboundProperty>
                <name>coap.response.code</name>
                <value>2.05</value>
            </inboundProperty>
            <inboundProperty>
                <name>coap.response.success</name>
                <value>true</value>
            </inboundProperty>
            <payload>
                <value>ServerResponse2</value>
                <mimeType>text/plain</mimeType>
            </payload>         
        </assert>
    </response>
</test>
